root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
indent_style = space

[*.php]
indent_size = 4

[*.rb]
indent_size = 2

[*.{pl,pm}]
indent_size = 4

[*.R]
indent_size = 2

[*.js]
indent_size = 4

[*.{html,erb}]
indent_size = 2

[*.go]
trim_trailing_whitespace = false
indent_style = tab

[*.css]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[Makefile]
indent_style = tab
